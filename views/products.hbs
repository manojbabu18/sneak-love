<div class="main-content-products flexed-item big-container">

  {{!-- CATEGORY --}}
  <aside class="tag-wrapper">
    <h4 class="tag-title">All Tags</h4>
    <ul id="tag_list" class="tag-list" data-category="{{category}}">
      {{#each tags}}
      <li class="tag-list-item">
        <input id="input_{{this._id}}" type="checkbox" data-tag-id="{{this._id}}" class="checkbox" />
        <label for="input_{{this._id}}">{{this.label}}</label>
      </li>
      {{/each}}
    </ul>
  </aside>

  {{!-- PRODUCTS--}}
  <section class="products-wrapper">
    <div class="products-infos">
      <h4 class="products-title">
        {{#compare category "collection" operator="==="}}
        Whole
        {{/compare}}
        {{#compare category "collection" operator="!="}}
        {{category}}
        {{/compare}}
        collection <span id="products_count" class="products-count">({{sneakers.length}})</span>
        <div class="filter-slider">
          <input type="range" min="{{this.min}}" max="{{this.max}}" value="" class="slider" id="price-filter">
          <span id="price-slider-number"></span>
        </div>
        {{!-- <div class="filter-slider">
          <input type="range" min="{{this.min}}" max="{{this.max}}" value="" class="slider" id="size-filter">
          <span id="size-slider-number"></span>
        </div> --}}
      </h4>
      <p class="products-subtitle">Prepare for your miles with the latest styles and colors of {{category}}
        running shoes.
        Take advantage of signature a footwear technologies including Zoom, Flyknite, and find the
        pairs running shoes that align with your running philosophy.</p>
    </div>
    {{#unless sneakers}}
    <p>Sorry, no sneakers yet !</p>
    {{/unless}}
    <div id="products_grid" class="products-grid flexed-item">
      {{#each sneakers}}
      {{> sneaker_mini }}
      {{/each}}
    </div>
  </section>
</div>